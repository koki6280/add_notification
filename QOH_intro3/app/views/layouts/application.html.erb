<!DOCTYPE html>
<html>
  <head>
    <title>QOH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => "reload" %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>
  </head>

  <body class="background">
   <div id="wrapper">
    <header class="navbar navbar-fixed-top navbar-inverse" style="background-color: #90EE90;">
      <div>
        <%= link_to home_about_path do %>
        <nav class="nav navbar-nav navbar-left">
          <span class="site_name">QOH<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></span><span class="site_name_min">  quality~of~health</span>
        </nav>
        <% end %>
        <nav>
          <div id="sp-menu">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                  <%= render 'layouts/member-head' %>
              <% else %>
                  <%= render 'layouts/guest-head' %>
              <% end %>
            </ul>
          </div>
        </nav>

        <div id="hm-icon">
             <a class="menu-trigger" href="#">
                <span></span>
                <span></span>
                <span></span>
             </a>
        </div>

      </div>
    </header>
    <%= yield %>
    <footer>
      <p class="footer_text">©︎All rights reserved by QOH.</p>
    </footer>
   </div>
  </body>
</html>
