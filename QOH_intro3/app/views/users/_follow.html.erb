<% if current_user.following?(user) %>
     <%= link_to 'フォロー中', user_relationships_path(user.id), method: :delete, data: {confirm: "フォローから外しますか？"}, class: "btn btn-primary" %>
<% else %>
     <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
<% end %>